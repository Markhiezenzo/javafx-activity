<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      prefHeight="400.0" prefWidth="600.0" spacing="16.0"
      xmlns="http://javafx.com/javafx/11.0.14-internal"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="aclcbukidnon.com.javafxactivity.controllers.TodoController"
      style="-fx-padding: 20; -fx-background-color: #f5f5f5;">

   <children>
      <Label text="TODO LIST" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #0f62fe;"/>

      <HBox spacing="16.0" alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" onAction="#onCreateClick"
                    prefHeight="42.0" prefWidth="135.0"
                    style="-fx-background-color: #0f62fe; -fx-cursor: hand;"
                    text="CREATE" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
               <tooltip>
                  <Tooltip text="Add new item (Ctrl+N)"/>
               </tooltip>
            </Button>
            <Button mnemonicParsing="false" onAction="#onDeleteClick"
                    prefHeight="42.0" prefWidth="135.0"
                    style="-fx-background-color: #da1e28; -fx-cursor: hand;"
                    text="DELETE" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
               <tooltip>
                  <Tooltip text="Delete selected item (Del)"/>
               </tooltip>
            </Button>
         </children>
      </HBox>

      <ListView fx:id="todoList" onKeyPressed="#handleKeyPress"
                prefHeight="200.0" prefWidth="600.0"
                style="-fx-font-size: 14; -fx-border-color: #e0e0e0;">
         <placeholder>
            <Label text="No todos yet! Click CREATE to add one."
                   style="-fx-text-fill: #a8a8a8;"/>
         </placeholder>
         <tooltip>
            <Tooltip text="Double-click to edit | Enter to edit | Delete to remove"/>
         </tooltip>
      </ListView>
   </children>
</VBox>